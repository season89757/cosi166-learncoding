<style>
  .navbar .navbar-inverse .navbar-fixed-top {width:100%}
</style>
<div class="navbar navbar-inverse navbar-fixed-top">
  <div class="container">
    <div class="row">
      <div class = "col-xs-3">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="#">IMDB for CS Books</a>
      </div>
      </div>
      <div class = "col-xs-5">
      <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
          <!-- <li><%= link_to "Ruby", imdb_index_path%></li> -->
        </ul>
      </div><!--/.nav-collapse -->
      </div>
      <% if !session[:imdb_user_id]%>
        <div class = "col-xs-1" >
          <button type="button" class="btn btn-info" data-toggle="modal" data-target="#registerModal">Register</button>
        </div>
        <div class = "col-xs-1">
          <button type="button" class="btn btn-info" data-toggle="modal" data-target="#loginModal">Sign In</button>
        </div>
      <% else %>
        <div class = "row col-xs-4">
            <div class = "col-xs-1" >

              <%if find_userphoto(session[:imdb_user_id])%>
                <img src=<%=@photo.attachment_url%> class="img-circle" height="50" width="50">
              <%else%>
                <img src="/images/unknown_user.png" class="img-circle" height="50" width="50">
              <%end%>

            </div>
            <div class="col-xs-1">
            </div>
            <div class="col-xs-2 dropdown">
              <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown"><%=@user.display_name%>
                <span class="caret"></span>
              </button>
                <ul class="dropdown-menu">
                  <li><%= link_to "My profile", users_profile_path, :class => "middle"%></li>
                  <li><%= link_to "Sign Out", imdb_logout_path, :class => "middle"%></li>
                </ul>
            </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
