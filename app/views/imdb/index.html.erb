   <br><br>
   <div class = "alert alert-info">
      <%= flash[:notice] %>
   </div>
<% end %>

<script src="Chart.js"></script>


<body>
  <div id = "page1" style = "background-color: #FFF;">
    <div id="page1-container" class="container-fullwidth">

      <div class="row text-center" height="80%" width = "100%">
        <br>
        <br>
        <br>
        <br>
        <br>
        <div align=center height="80%" width="100%">
          <%= image_tag(@logo_src,width:"50%", height:"50%") %>
        </div>
      </div>

      <div align="center" class = "row" height="15vh">
        <%= form_tag("/search_box/search_results", method: "get", id:'search') do %>
        <div class = "col-xs-2">
            <br>
            <br>
            <%= select_tag :tag, options_for_select(@dropdown_choices), class: 'form-control' %>
        </div>

        <div class = "col-xs-8">
          <div class = "search_box">
            <br>
            <br>
            <input name = "terms" class = "form-control"></input>
          </div>
        </div>

        <div class = "col-xs-2">
          <br>
          <br>
          <button type = "submit" class = "btn btn-primary">Search</button>
        </div>
        <% end %>
      </div>

      <div id = "arrow1" class = "row" align = "center" height="15vh">
        <a href="#page2" class = "smooth">
          <%= image_tag(@black_arrow_src, size: "50x50") %>
          <span class = "black_font smooth">New to coding? Check this out!</span>
        </a>
        <br>
        <br>
      </div>

    </div>
  </div>

  <div id = "page2" height = "100%" width = "100%" style = "background-color: #FFF;">
    <div id = "page2_container" class = "container">

      <div class = "row" align = "center" width = "100vh">

        <canvas id="myChart" width="200" height="200"></canvas>
        <script>
          var ctx = $("#myChart");
          var data = {
    labels: ["AVG. Salary", "Popularity", "", "AVG. Learning Time", "Difficulty", "Appeared Time", "#Books"],
    datasets: [
        {
            label: "Java",
            backgroundColor: "rgba(179,181,198,0.2)",
            borderColor: "rgba(179,181,198,1)",
            pointBackgroundColor: "rgba(179,181,198,1)",
            pointBorderColor: "#fff",
            pointHoverBackgroundColor: "#fff",
            pointHoverBorderColor: "rgba(179,181,198,1)",
            data: [65, 59, 90, 81, 56, 55, 40]
        },
        {
            label: "Ruby",
            backgroundColor: "rgba(255,99,132,0.2)",
            borderColor: "rgba(255,99,132,1)",
            pointBackgroundColor: "rgba(255,99,132,1)",
            pointBorderColor: "#fff",
            pointHoverBackgroundColor: "#fff",
            pointHoverBorderColor: "rgba(255,99,132,1)",
            data: [28, 48, 40, 19, 96, 27, 100]
        }
    ]
};

          new Chart(ctx, {
              type: "radar",
              data: data,
              options: {
                      scale: {
                          reverse: true,
                          ticks: {
                              beginAtZero: true
                          }
                      }
              }
          });
        </script>

        <br>
        <br>
      </div>

      <div class = "row" align = "center">
        <p class = "black_font"> Get started now!</p>
      </div>

      <div class = "row" align = "center">
        <div class="btn-group btn-group-lg" role="group" aria-label="...">
          <button type="button" class="btn btn-default" style = "background-color: #ff9933; color: #FFF;">Java</button>
          <button type="button" class="btn btn-default" style = "background-color: #000099; color: #FFF;">C</button>
          <button type="button" class="btn btn-default" style = "background-color: #0000ff; color: #FFF;">C++</button>
          <button type="button" class="btn btn-default" style = "background-color: #6600cc; color: #FFF;">C#</button>
          <button type="button" class="btn btn-default" style = "background-color: #669900; color: #FFF;">Python</button>
          <button type="button" class="btn btn-default" style = "background-color: #3399ff; color: #FFF;">PHP</button>
          <button type="button" class="btn btn-default" style = "background-color: #e6b800; color: #FFF;">JavaScript</button>
          <button type="button" class="btn btn-default" style = "background-color: #9999ff; color: #FFF;">Perl</button>
          <button type="button" class="btn btn-default" style = "background-color: #ff5050; color: #FFF;">Ruby</button>
          <button type="button" class="btn btn-default" style = "background-color: #808080; color: #FFF;">Visual Basic .NET</button>
        </div>
      </div>

      <div class = "row" align = "center">
        <div class="btn-group" role="group" aria-label="...">
          <button type="button" class="btn btn-default">Delphi</button>
          <button type="button" class="btn btn-default">Assembly Language</button>
          <button type="button" class="btn btn-default">Objective-C</button>
          <button type="button" class="btn btn-default">Visual Basic</button>
          <button type="button" class="btn btn-default">Swift</button>
          <button type="button" class="btn btn-default">MATLAB</button>
          <button type="button" class="btn btn-default">PL/SQL</button>
          <button type="button" class="btn btn-default">R</button>
          <button type="button" class="btn btn-default">Groovy</button>
        </div>
      </div>

      <div class = "row" align = "center">
        <br>
        <br>
        <a href="#page3">
          <%= image_tag(@black_arrow_src, size: "50x50") %>
          <span class = "black_font">Ultimate solution here</span>
        </a>
        <br>
        <br>
      </div>

    </div>
  </div>

  <div id = "page3" class = "fit_full_screen" style = "background-color: #000;">
    <div id = "page3_container" class = "container">
      <div class = "row" align = "center">
        <%=image_tag("pl_trends.jpg", :width => "100%")%>
      </div>

      <div class = "row" align = "center">
        <a href="#page1">
          <%= image_tag(@white_arrow_src, size: "50x50") %>
          <span class = "white_font">Credit & About</span>
        </a>
      </div>

    </div>
  </div>

  <div class="modal fade" id="loginModal" role="dialog">
    <div class="modal-dialog modal-sm">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Welcome and Please Login</h4>
        </div>
        <div class="modal-body">
          <div>
            <%= @login_error %>
          </div>
          <div align = center>
            <%= form_tag("/imdb/login", method: "get") do %>
              <%= label_tag(:q_username, "Username")%>
              <%= text_field_tag(:username) %><br>
              <%= label_tag(:q_password, "Password")%>
              <%= password_field_tag(:password) %><br>
              <%= submit_tag("Login")%>
            <% end %>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>

<script>
  $(function() {
  $('a[href*="#"]:not([href="#"])').click(function() {
    if (location.pathname.replace(/^\//,'') == this.pathname.replace(/^\//,'') && location.hostname == this.hostname) {
      var target = $(this.hash);
      target = target.length ? target : $('[name=' + this.hash.slice(1) +']');
      if (target.length) {
        $('html, body').animate({
          scrollTop: target.offset().top
        }, 1000);
        return false;
      }
    }
  });
});
</script>


</body>
