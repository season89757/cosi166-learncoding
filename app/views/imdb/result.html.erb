<h1 align=center>Search Result</h1>

<div style="width:1000px;height:500px;overflow:hidden;">

  <div style="float:left;dispaly:block;width:300px;height:400px;">
    <%= image_tag(@book_image, :size =>"300x300") %>
    <div style="width:300px;height:50px;">
      <button type="button" id="button01">
        <%= @tag1 %>
      </button>
      <button type="button" id="button01">
        <%= @tag2 %>
      </button>
      <button type="button" id="button01">
        <%= @tag3 %>
      </button>
    </div>
  </div>

  <div style="float:left;dispaly:block;width:300px;height:400px;margin-left:10px;margin-left:50px;">
    <span style="float:left;display:block;font-size:20px;color:#0000ff;width:250px;height:30px;">
      <%= @book_name %>
    </span>
    <span style="float:left;display:block;font-size:20px;color:#ff0000;width:50px;height:30px;">
      <%= @book_rating %>
    </span>
