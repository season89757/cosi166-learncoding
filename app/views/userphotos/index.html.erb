<% if !flash[:notice].blank? %>
   <div class = "alert alert-info">
      <%= flash[:notice] %>
   </div>
<% end %>

<br />

<%= link_to "New Photo", new_userphoto_path, class: "btn btn-primary" %>
<br />
<br />

<table class = "table table-bordered table-striped">
   <thead>.
      <tr>
         <th>Name</th>
         <th>Download Link</th>
         <th> </th>
      </tr>
   </thead>

   <tbody>
      <%if !@userphotos.nil?%>
      <% @userphotos.each do |photo| %>

         <tr>
            <td><%= photo.username %></td>
            <td><img src=<%=photo.attachment_url%> class="img-circle" alt="Cinque Terre" height="250px" width="250px"></td>
            <td><%= button_to "Delete",  photo, method: :delete, class: "btn btn-danger", confirm: "Are you sure that you wish to delete?" %></td>
         </tr>

      <%end %>
      <%end%>
   </tbody>

</table>
