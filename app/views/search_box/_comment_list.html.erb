
<% @comments.each do |c|%>
  <div class="row">
    <div class="col-sm-2">
      <!-- <img src="/images/obama.jpg" class="img-circle" height="165" width="165" alt="Avatar"> -->
      <%if find_userphoto(c.user_id)%>
        <img src=<%=find_userphoto(c.user_id).attachment_url%> class="img-circle" height="120" width="120">
      <%else%>
        <img src="/images/unknown_user.png" class="img-circle" height="120" width="120" alt="Avatar">
      <%end%>
    </div>

    <div class="col-sm-10">
      <h2><%=c.title%></h2>
      <h5><span class="glyphicon glyphicon-time"></span> <%= find_displayname(c.user_id)%>, <%=c.created_at %></h5>
      <p><%=c.body%></p>
      <br><br>
    </div>
  </div>
  <hr>
<% end %>
